extends layout

block content
  h1 #{title}
  form(method='POST', action='/article/edit/'+data._id)
    #form-group
      label Title:
      input.form-control(name='title', type='text',value=data.title)
    #form-group
      label Body:
      textarea.form-control(name='body')= data.body
    
    input.btn.btn-primary(type='submit',value='Submit')
